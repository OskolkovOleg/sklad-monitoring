// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Справочник складов
model Warehouse {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  zones       Zone[]
  
  @@index([code])
  @@index([isActive])
}

// Справочник зон склада
model Zone {
  id          String    @id @default(cuid())
  code        String    
  name        String
  warehouseId String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  locations   Location[]
  
  @@unique([warehouseId, code])
  @@index([warehouseId])
  @@index([isActive])
}

// Справочник локаций (ячеек)
model Location {
  id          String    @id @default(cuid())
  code        String    
  name        String
  zoneId      String
  zone        Zone      @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  row         String?
  rack        String?
  level       String?
  capacity    Float?    // Вместимость
  unit        String?   // Единица измерения
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventories Inventory[]
  norms       LocationNorm[]
  
  @@unique([zoneId, code])
  @@index([zoneId])
  @@index([isActive])
}

// Справочник SKU (товаров/материалов)
model SKU {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String?
  category    String?
  supplier    String?
  abcClass    String?   // ABC классификация
  unit        String    @default("шт")
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventories Inventory[]
  norms       SKUNorm[]
  
  @@index([code])
  @@index([category])
  @@index([abcClass])
  @@index([isActive])
}

// Остатки на складе
model Inventory {
  id              String    @id @default(cuid())
  skuId           String
  sku             SKU       @relation(fields: [skuId], references: [id], onDelete: Cascade)
  locationId      String
  location        Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  quantity        Float
  reservedQty     Float     @default(0)
  unavailableQty  Float     @default(0)
  batchNumber     String?
  expiryDate      DateTime?
  status          String    @default("available") // available, reserved, unavailable
  lastUpdated     DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([skuId, locationId, batchNumber])
  @@index([skuId])
  @@index([locationId])
  @@index([status])
  @@index([lastUpdated])
}

// Нормы запасов по локациям
model LocationNorm {
  id          String   @id @default(cuid())
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  minLevel    Float?   // Минимальный уровень
  targetLevel Float?   // Целевой уровень
  maxLevel    Float?   // Максимальный уровень
  unit        String   @default("шт")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([locationId])
  @@index([locationId])
}

// Нормы запасов по SKU
model SKUNorm {
  id          String   @id @default(cuid())
  skuId       String
  sku         SKU      @relation(fields: [skuId], references: [id], onDelete: Cascade)
  minLevel    Float?   // Минимальный уровень
  targetLevel Float?   // Целевой уровень
  maxLevel    Float?   // Максимальный уровень
  unit        String   @default("шт")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([skuId])
  @@index([skuId])
}

// Агрегированные данные для быстрой визуализации
model Aggregation {
  id                String   @id @default(cuid())
  entityType        String   // warehouse, zone, location, sku
  entityId          String
  entityCode        String
  entityName        String
  totalQuantity     Float    @default(0)
  availableQuantity Float    @default(0)
  reservedQuantity  Float    @default(0)
  capacity          Float?
  fillPercentage    Float?   // Процент заполненности
  minLevel          Float?
  targetLevel       Float?
  maxLevel          Float?
  status            String   // green, yellow, red, gray
  calculatedAt      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([entityType, entityId])
  @@index([entityType])
  @@index([entityCode])
  @@index([status])
  @@index([calculatedAt])
}

// Лог ошибок импорта/валидации
model ErrorLog {
  id          String   @id @default(cuid())
  source      String   // import, validation, calculation
  severity    String   // info, warning, error, critical
  message     String
  details     String?  @db.Text
  entityType  String?
  entityId    String?
  createdAt   DateTime @default(now())
  
  @@index([source])
  @@index([severity])
  @@index([createdAt])
}
