// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Справочник складов
model Warehouse {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  zones       Zone[]
  
  @@index([code])
  @@index([isActive])
}

// Справочник зон склада
model Zone {
  id          String    @id @default(cuid())
  code        String    
  name        String
  warehouseId String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  locations   Location[]
  
  @@unique([warehouseId, code])
  @@index([warehouseId])
  @@index([isActive])
}

// Справочник локаций (ячеек)
model Location {
  id          String    @id @default(cuid())
  code        String    
  name        String
  zoneId      String
  zone        Zone      @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  row         String?
  rack        String?
  level       String?
  capacity    Float?    // Вместимость
  unit        String?   // Единица измерения
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventories Inventory[]
  norms       LocationNorm[]
  
  @@unique([zoneId, code])
  @@index([zoneId])
  @@index([isActive])
}

// Справочник SKU (товаров/материалов)
model SKU {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String?
  category    String?
  supplier    String?
  abcClass    String?   // ABC классификация
  unit        String    @default("шт")
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventories Inventory[]
  norms       SKUNorm[]
  
  @@index([code])
  @@index([category])
  @@index([abcClass])
  @@index([isActive])
}

// Остатки на складе
model Inventory {
  id              String    @id @default(cuid())
  skuId           String
  sku             SKU       @relation(fields: [skuId], references: [id], onDelete: Cascade)
  locationId      String
  location        Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  quantity        Float
  reservedQty     Float     @default(0)
  unavailableQty  Float     @default(0)
  batchNumber     String?
  expiryDate      DateTime?
  status          String    @default("available") // available, reserved, unavailable
  lastUpdated     DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([skuId, locationId, batchNumber])
  @@index([skuId])
  @@index([locationId])
  @@index([status])
  @@index([lastUpdated])
}

// Нормы запасов по локациям
model LocationNorm {
  id          String   @id @default(cuid())
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  minLevel    Float?   // Минимальный уровень
  targetLevel Float?   // Целевой уровень
  maxLevel    Float?   // Максимальный уровень
  unit        String   @default("шт")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([locationId])
  @@index([locationId])
}

// Нормы запасов по SKU
model SKUNorm {
  id          String   @id @default(cuid())
  skuId       String
  sku         SKU      @relation(fields: [skuId], references: [id], onDelete: Cascade)
  minLevel    Float?   // Минимальный уровень
  targetLevel Float?   // Целевой уровень
  maxLevel    Float?   // Максимальный уровень
  unit        String   @default("шт")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([skuId])
  @@index([skuId])
}

// Агрегированные данные для быстрой визуализации
model Aggregation {
  id                String   @id @default(cuid())
  entityType        String   // warehouse, zone, location, sku
  entityId          String
  entityCode        String
  entityName        String
  totalQuantity     Float    @default(0)
  availableQuantity Float    @default(0)
  reservedQuantity  Float    @default(0)
  capacity          Float?
  fillPercentage    Float?   // Процент заполненности
  minLevel          Float?
  targetLevel       Float?
  maxLevel          Float?
  status            String   // green, yellow, red, gray
  calculatedAt      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([entityType, entityId])
  @@index([entityType])
  @@index([entityCode])
  @@index([status])
  @@index([calculatedAt])
}

// Лог ошибок импорта/валидации
model ErrorLog {
  id          String   @id @default(cuid())
  source      String   // import, validation, calculation
  severity    String   // info, warning, error, critical
  message     String
  details     String?
  entityType  String?
  entityId    String?
  createdAt   DateTime @default(now())
  
  @@index([source])
  @@index([severity])
  @@index([createdAt])
}

// Статистика импорта данных
model ImportLog {
  id              String   @id @default(cuid())
  filename        String?
  type            String   // inventory, norms, warehouses
  totalRows       Int      @default(0)
  successRows     Int      @default(0)
  errorRows       Int      @default(0)
  status          String   @default("processing") // processing, completed, failed
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  createdBy       String?
  errors          String? // JSON массив ошибок
  
  @@index([status])
  @@index([startedAt])
  @@index([type])
}

// История экспорта отчетов
model ReportExport {
  id          String   @id @default(cuid())
  filename    String
  reportType  String   // warehouse_status, kpi_report, inventory_report
  entityType  String?  // warehouse, zone, location, sku
  recordCount Int      @default(0)
  filters     String?  // JSON с фильтрами
  exportedBy  String?
  exportedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  
  @@index([reportType])
  @@index([exportedAt])
  @@index([exportedBy])
}

// NextAuth - Пользователи
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password для Credentials Provider
  role          String    @default("user") // admin, manager, user
  department    String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  
  @@index([email])
  @@index([role])
  @@index([isActive])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
